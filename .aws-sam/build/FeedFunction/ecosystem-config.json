{
  "project": "bluesky-ecosystem",
  "version": "1.0.0",
  "cloned_date": "'$(date -Iseconds)'",
  "repositories": {
    "core": {
      "social-app": {
        "path": "./core/social-app",
        "type": "react-native",
        "setup_command": "yarn install && yarn start"
      },
      "atproto": {
        "path": "./core/atproto", 
        "type": "typescript-monorepo",
        "setup_command": "make nvm-setup && make deps && make build"
      },
      "pds": {
        "path": "./core/pds",
        "type": "docker",
        "setup_command": "docker-compose up -d"
      }
    },
    "infrastructure": {
      "indigo": {
        "path": "./infrastructure/indigo",
        "type": "go"
      },
      "jetstream": {
        "path": "./infrastructure/jetstream",
        "type": "typescript"
      },
      "ozone": {
        "path": "./infrastructure/ozone",
        "type": "typescript"
      }
    },
    "tools": {
      "feed-generator": {
        "path": "./tools/feed-generator",
        "type": "typescript"
      }
    }
  }
}
